{
  "name": "westmuir-web",
  "version": "1.0.0",
  "description": "westmuir web",
  "main": "index.html",
  "scripts": {
    "build": "npx @11ty/eleventy",
    "start": "npm run serve --watch",
    "debug": "DEBUG=* npx @11ty/eleventy",
    "serve": "wireit"
  },
  "wireit": {
    "build:dev": {
      "dependencies": [
        "build:dev:eleventy"
      ]
    },
    "build:dev:eleventy": {
      "command": "NODE_ENV=DEV eleventy",
      "files": [
        "src",
        "lib",
        "eleventy.config.cjs"
      ],
      "output": [
        "_site"
      ]
    },
    "startX": {
      "command": "npx @11ty/eleventy --serve"
    },
    "serve": {
      "command": "wds --watch --root-dir _site",
      "service": true,
      "dependencies": [
        {
          "script": "build:dev",
          "cascade": false
        }
      ]
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@web/dev-server": "^0.4.1",
    "prettier": "^3.1.1",
    "prettier-plugin-organize-imports": "^3.2.4",
    "wireit": "^0.14.1"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ],
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "printWidth": 100
        }
      },
      {
        "files": "*.njk",
        "options": {
          "parser": "html"
        }
      }
    ]
  }
}
